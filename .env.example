# Hutch Agent Configuration
# Copy to ~/.hutch-agent/.env and customize

# ============================================================
# HutchMem Integration
# ============================================================
HUTCHMEM_API_URL=http://localhost:37777
HUTCHMEM_TIMEOUT_MS=3000
HUTCHMEM_PROJECT=personal

# ============================================================
# Claude Execution
# ============================================================
CLAUDE_MODEL=sonnet
MAX_TURNS=50
MAX_CYCLE_TIME_MS=900000
STUCK_TIMEOUT_MS=120000
OUTPUT_FORMAT=stream-json

# ============================================================
# Heartbeat Configuration
# ============================================================
HEARTBEAT_INTERVAL_MS=30000
HEARTBEAT_FAILURE_THRESHOLD=3

# Urgency thresholds (hours until deadline)
DEADLINE_CRITICAL_HOURS=6
DEADLINE_HIGH_HOURS=24
DEADLINE_MEDIUM_HOURS=72

# Cycle delays (milliseconds)
CYCLE_DELAY_CRITICAL_MS=2000
CYCLE_DELAY_HIGH_MS=5000
CYCLE_DELAY_MEDIUM_MS=8000
CYCLE_DELAY_NORMAL_MS=10000
CYCLE_DELAY_FAILURE_MS=30000
CYCLE_DELAY_ERROR_MS=30000

# ============================================================
# Circuit Breaker Configuration
# ============================================================
# Soft thresholds (warnings)
CIRCUIT_SOFT_FAILURES=3
CIRCUIT_SOFT_SIMILARITY_PERCENT=80
CIRCUIT_SOFT_SAME_ERROR_COUNT=3

# Hard thresholds (blocking)
CIRCUIT_HARD_FAILURES=5
MAX_TASK_DURATION_MS=600000
MAX_TOKENS_PER_TASK=50000

# ============================================================
# State Management
# ============================================================
MAX_RECENT_ACTIONS=50
CHECKPOINT_INTERVAL_MS=60000
MAX_TRIP_EVENTS=50
MAX_RECENT_CYCLES=20

# ============================================================
# Scheduler Configuration
# ============================================================
MIN_CYCLE_MS=5000
MAX_CYCLE_MS=60000
DEFAULT_TASK_RETRIES=3

# ============================================================
# Memory Configuration
# ============================================================
MEMORY_SEARCH_LIMIT=10
MEMORY_RELEVANCE_THRESHOLD=0.5

# ============================================================
# Telemetry Configuration
# ============================================================
TELEMETRY_ENABLED=false
TELEMETRY_ENDPOINT=
COST_TRACKING_ENABLED=true

# Token costs (per 1M tokens, in cents)
TOKEN_COST_INPUT=300
TOKEN_COST_OUTPUT=1500

# ============================================================
# Feature Flags
# ============================================================
ENABLE_DAG_SCHEDULER=false
ENABLE_MULTI_AGENT=false
ENABLE_MEMORY_EXTRACTION=true
ENABLE_USER_MODEL=true
